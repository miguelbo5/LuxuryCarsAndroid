<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_coche"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mercedes_a45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_coche"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/texto_marca_modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_coche"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="Marca modelo"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texto_precio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_coche"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:text="Precio"
            android:textColor="#FF5722"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/texto_kilometros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_coche"
            android:gravity="center"
            android:maxLines="1"
            android:text="Kilometros"
            android:textColor="#FF5722"
            android:textSize="22sp" />

    </LinearLayout>


</RelativeLayout>